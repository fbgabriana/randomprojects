#!/bin/sh

APPLICATION="idlde"
APP_ARGS=
XUL_ARGS=
IDL_VERSION="82"
ENVI_VERSION="50"
STUDENT_FLAG=""
LICENSE_NAME="license.dat"
INSTALL_DIR="/usr/local/exelis"
IDLDIRECTORY="idl"
OS="linux"
ARCH=".x86_64"
JRE_ARCH="amd64"
IDLDE_ARCH="$ARCH"

IDLDIRECTORY_VERS="$IDLDIRECTORY$IDL_VERSION"
IDL_DIR="$INSTALL_DIR/$IDLDIRECTORY_VERS"
ENVI_DIR="$IDL_DIR/../envi$ENVI_VERSION"

BIN_DIR="$IDL_DIR/bin/bin.$OS$ARCH"
BIN_DIR_IDLDE="$IDL_DIR/idlde/bin.$OS$IDLDE_ARCH"
NEW_TEXT="$BIN_DIR:$BIN_DIR/dm/lib"
IDLJAVAB_LIB_LOCATION="$BIN_DIR_IDLDE/jre/lib/$JRE_ARCH/server"
IDLJAVAB_LIB_LOCATION_PATH="$IDLJAVAB_LIB_LOCATION:$IDLJAVAB_LIB_LOCATION/..:$IDLJAVAB_LIB_LOCATION/../native_threads"
LD_LIBRARY_PATH="$BIN_DIR_IDLDE:$NEW_TEXT:$IDLJAVAB_LIB_LOCATION_PATH"
ODBCINI="$IDL_DIR/resource/dm/$OS$IDLDE_ARCH/odbc.ini"
CLASSPATH=".:$IDL_DIR/resource/bridges/export/java/javaidlb.jar"
PATH="$IDL_DIR/bin:$PATH"

exec "$IDL_DIR/idlde/idlde.$OS$IDLDE_ARCH" -vm "$BIN_DIR_IDLDE/jre/bin/java"

